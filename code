class base
{
public:
void disp()
{
cout <<" display base class \n";
}
Virtul void show()
{
cout<<" show base class ";
};

class derived:public base {

public:
void disp()
{
cout <<" display derived dass";
}
void show()
{
cout <<" show deerived class";
}}
int main () {
base b;
derived d;
base *bptr;
cout << "bptr points to base: \n";
bptr = & b;
bptr -> disp();
bptr -> show();
cout << "bptr pointer to derived";
bptr = &d;
bptr-> disp();
bptr ->show();
return 0;
}

OUTPUT

